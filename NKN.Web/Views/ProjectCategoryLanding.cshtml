@inherits Umbraco.Web.Mvc.UmbracoViewPage<ProjectCategoryLandingViewModel>

<section class="hero-banner" style="background-image: url(@Model.BannerImage.Url)">
	<div class="wrapper">
		<h1 class="page-title">@Model.PageTitle</h1>
	</div>
</section>

<section class="projects-landing">
	<div class="image-with-text-block">
		<div class="wrapper">
			<div class="rte-block">
				@if (Model.Image != null)
				{
					<div class="image-holder">
						<img src="@Model.Image.Url" alt="" />
					</div>
				}

				@if (Model.Text != null)
				{
					@Model.Text
				}
			</div>
		</div>
	</div>

	<div class="projects-list-holder">
		<div class="wrapper">
			<h2 class="section-title">Realizovani projekti</h2>
			<div class="projects-list js-projects-list">
				@foreach (var projectPreview in Model.AllProjects)
				{
				<div class="item">
					@if (@projectPreview.SmallImage != null)
					{
						<div class="image-holder">
							<img src="@projectPreview.SmallImage.Url" alt="" />
						</div>
					}
					<div class="text-holder">
						@if (@projectPreview.Title != null)
						{
							<h3>@projectPreview.Title</h3>
						}
						@if (@projectPreview.Summary != null)
						{
							<p>@projectPreview.Summary</p>
						}
						<a href="@projectPreview.Url" class="btn">Saznaj više</a>
					</div>
				</div>
				}
			</div>
		</div>
	</div>
</section>