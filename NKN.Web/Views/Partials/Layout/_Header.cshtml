@using NKN.Core.ViewModels.Partials.Layout
@inherits UmbracoViewPage<HeaderViewModel>

<header class="header js-header">
	<div class="wrapper">
		<a href="@Model.LogoUrl" class="header-logo">
			@if (Model.Logo != null)
			{
				<img src="@Model.Logo.Url" class="header-logo-white" alt="@Model.Logo.AlternateText" />

			}
			@if (Model.LogoBlack != null)
			{
				<img src="@Model.LogoBlack.Url" class="header-logo-black" alt="@Model.LogoBlack.AlternateText" />

			}
		</a>
		<nav class="nav js-nav">
			@if (Model.NavigationItems != null && Model.NavigationItems.Any())
			{
				foreach (var item in Model.NavigationItems)
				{
					<a href="@item.Url" class="nav-link">@item.PageTitle</a>
				}
			}

		</nav>
		@if (!string.IsNullOrEmpty(Model.FacebookLink) || !string.IsNullOrEmpty(Model.InstagramLink) || !string.IsNullOrEmpty(Model.YouTubeLink))
		{
			<div class="header-social">
				@if (!string.IsNullOrEmpty(Model.FacebookLink))
				{
					<a href="@Model.FacebookLink" class="header-social-link">
						<span class="sr-only">Facebook</span>
						<span class="icon font-ico-facebook"></span>
					</a>
				}
				@if (!string.IsNullOrEmpty(Model.InstagramLink))
				{
					<a href="@Model.InstagramLink" class="header-social-link">
						<span class="sr-only">Instagram</span>
						<span class="icon font-ico-instagram"></span>
					</a>
				}
				@if (!string.IsNullOrEmpty(Model.YouTubeLink))
				{
					<a href="@Model.YouTubeLink" class="header-social-link">
						<span class="sr-only">YouTube</span>
						<span class="icon font-ico-youtube"></span>
					</a>
				}
			</div>
		}
		<div class="language-switcher">
			<button type="button" class="selected-item js-selected-item">SR</button>
			<ul class="language-list js-language-list">
				<li>
					<span class="js-language-item">SR</span>
				</li>
				<li>
					<span class="js-language-item">EN</span>
				</li>
			</ul>
		</div>
		<button class="header-hamburger js-header-hamburger" aria-hidden="true">
			<span class="sr-only">Click to open navigation</span>
			<span class="font-ico-hamburger"></span>
		</button>
	</div>
</header>
