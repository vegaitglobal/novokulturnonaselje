@inherits UmbracoViewPage<WriteUsViewModel>

<section class="contact-form">
	@if (Model.BackgroundImage != null)
	{
		<div class="contact-background" style="background-image:url('@Model.BackgroundImage.Url')">
			<span class="green-overlay"></span>
		</div>
	}
	<div class="wrapper">
		<div class="contact-form-wrap">
			@if (!string.IsNullOrWhiteSpace(Model.Title))
			{
				<h2>@Model.Title</h2>
			}
			@{
				Html.RenderAction<ContactFormController>(c => nameof(c.ContactForm));
			}

		</div>
	</div>
</section>
